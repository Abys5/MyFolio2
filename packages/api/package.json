{
    "name": "@myfolio/api",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Royal",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^3.0.7",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "is-empty": "^1.2.0",
        "jsonwebtoken": "^8.5.1",
        "knex": "^0.20.4",
        "morgan": "^1.9.1",
        "mysql": "^2.17.1",
        "mysql2": "^2.1.0",
        "uid-generator": "^2.0.0",
        "validator": "^12.1.0"
    },
    "scripts": {
        "build": "rimraf ./dist && tsc",
        "watch": "nodemon",
        "start:dev": "ts-node ./src/index.ts",
        "db:make:migration": "knex --knexfile src/database/knexfile.ts -x ts migrate:make",
        "db:make:seed": "knex --knexfile src/database/knexfile.ts -x ts seed:make",
        "db:dev:seed": "knex --knexfile src/database/knexfile.ts seed:run --env development",
        "db:dev:latest": "knex --knexfile src/database/knexfile.ts migrate:latest --env development",
        "db:production:latest": "knex --knexfile src/database/knexfile.ts migrate:latest --env production",
        "db:dev:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback --env development",
        "db:production:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback --env production",
        "test:lint": "eslint --ext .ts ./src",
        "test:lint:fix": "npm run test:lint -- --fix"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.17.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.2",
        "@types/faker": "^4.1.8",
        "@types/is-empty": "^1.2.0",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/morgan": "^1.7.37",
        "@types/mysql2": "types/mysql2",
        "@types/node": "^13.1.4",
        "@types/uid-generator": "^2.0.2",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.14.0",
        "@typescript-eslint/parser": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "faker": "^4.1.0",
        "rimraf": "^3.0.0",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.4"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm run start:dev",
        "ext": "ts"
    }
}
